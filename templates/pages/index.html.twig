{% extends 'base.html.twig' %}

{% block header %}
    {{ parent() }}
{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="span3">
            <h3>  Cat√©gories </h3>
            <hr>
            {% for categories in categories %}
               <a href="{{ path('tri',{'id': categories.id}) }}">{{ categories.nom }} 
               </a> 
                <span class="badge badge-pill">{{ categories.Articles|length }} </span>
               <br>
            {% endfor %}
        </div>
        <div class="span9">
        <h3>  Articles </h3>
        <hr>
            <ul class="thumbnails">
            {% for articles in articles %}
                <li class="span3">
                    <div class="thumbnail">
                        <img src="{{ articles.images.url }}" alt="{{ articles.images.alt }}" width="300" height="300">
                        <div class="caption">
                            <h4>{{ articles.nom }}</h4>
                            <a class="btn btn-primary" href="{{ path('details',{'id': articles.id}) }}">Plus d'infos</a>
                        </div>
                    </div>
                </li> 
                {% endfor %}
            </ul>

        </div>
    </div>
</div>
{% endblock %}

 {% block footer %}
        {{ parent() }}
    {% endblock %}